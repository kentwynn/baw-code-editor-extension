{
  "name": "BAW Code Editor Tool",
  "version": "1.0.0",
  "description": "Advanced Code Editor for IBM BAW (Similar to VSCode)",
  "manifest_version": 2,
  "author": "Kent Wynn",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "BAW Code Editor Tool"
  },
  "permissions": ["tabs", "activeTab", "scripting", "storage", "downloads"],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "run_at": "document_idle",
      "js": ["page.js"],
      "css": [],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["inject.js"]
}
